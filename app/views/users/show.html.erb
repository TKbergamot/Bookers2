<div class="contianer">
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/profile", user: current_user %>
		</div>
		<div class="col-xs-9">

			<h1>Books</h1>

			<table class="table table-hover">
				<thead>
			    	<tr>
			    		<th></th>
			    		<th>Title</th>
			    		<th>Opinion</th>
			   		</tr>
				</thead>

				<tbody>
					<% @user.books.each do |book| %>
				  		<tr>
				  			<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: "jpeg" %></td>
				  			<td><%= book.title %></td>
				  			<td><%= book.body %></td>
				  		</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>