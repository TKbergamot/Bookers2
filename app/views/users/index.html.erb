<div class="contianer">
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/profile", user: current_user %>
		</div>
		<div class="col-xs-9">

			<h1>Users</h1>

			<table class="table table-hover">
				<thead>
				    <tr>
				    	<th>image</th>
			    		<th>name</th>
			    		<th></th>
					</tr>
			  	</thead>

			  	<tbody>
					<% @users.each do |user| %>
				  		<tr>
				  			<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg" %></td>
				  			<td><%= user.name %></td>
				  			<td><%= link_to "Show", user %></td>
				  		</tr>
				 	<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>